                @Html.DisplayFor(modelItem => item.warns_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.welcome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rules)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.disabled_commands)
            </td>
