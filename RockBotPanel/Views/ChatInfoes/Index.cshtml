@model IEnumerable<RockBotPanel.Models.ChatInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.warns_quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.welcome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rules)
