@model RockBotPanel.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Add user";
}

<h1>Add user</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Userid" class="control-label">User ID</label>
                <input asp-for="Userid" class="form-control" />
                <span asp-validation-for="Userid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warns" class="control-label"></label>
                <input asp-for="Warns" class="form-control" value="0" />
                <span asp-validation-for="Warns" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chatid" class="control-label">Chat ID</label>
                <input asp-for="Chatid" class="form-control" readonly="readonly" />
                <span asp-validation-for="Chatid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.Chatid">Back to List</a>
</div>

