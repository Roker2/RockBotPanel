@model RockBotPanel.ViewModels.AddChatIdViewModel
@{
    ViewBag.Title = "Add chat";
}

<h1>Add chat</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ChatId" class="col-sm-2 col-form-label">Chat ID</label>
        <div class="col-sm-10">
            <input asp-for="ChatId" class="form-control" />
            <span asp-validation-for="ChatId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Code" class="col-sm-2 col-form-label">Validation code</label>
        <div class="col-sm-10">
            <input asp-for="Code" class="form-control">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add chat</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>