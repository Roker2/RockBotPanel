@model IEnumerable<RockBotPanel.Models.Chatinfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="account" asp-action="AddChatId">Add chat</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Chat Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Max Warns Quantity
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Welcome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rules)
            </th>
            <th>
                Disabled Commands
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.Raw(item.GetChatName())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarnsQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Welcome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rules)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisabledCommands)
            </td>
            <td>
                <a asp-controller="users" asp-action="Index" asp-route-id="@item.Id">Users</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
